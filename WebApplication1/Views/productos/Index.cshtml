@model IEnumerable<WebApplication1.Models.productos>

@{
    ViewBag.Title = "Index";
}

<div class="row col-md-12 container_center title-basic">
    <h1>Listado de Productos</h1>
</div>


<p>
    @Html.ActionLink("Crear Nuevo", "Create", null, new { @class = " btn btn-primary" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.descripcion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.tipo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.stock)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.valor)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.estado)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.empresas.identificacion)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.descripcion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.tipo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.stock)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.valor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.estado)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.empresas.identificacion)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.id }, new { @class = " btn btn-primary" }) |
                @Html.ActionLink("Details", "Details", new { id = item.id }, new { @class = " btn btn-warning" }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.id }, new { @class = " btn btn-danger" })
            </td>
        </tr>
    }

</table>
